#!/bin/bash

# Purpose: checkout distro from github and create *.tar.gz files to use in RPM. 

OLDVER=1.0.0-beta.1
DL_URL=https://github.com/lifemapper/@REPONAME@/archive/refs/tags
DL_PKG=$OLDVER.@TARBALL_POSTFIX@

TOPDIR=@REPONAME@-$OLDVER
NEW_TOPDIR=@PKGNAME@
NEW_PKG=@PKGNAME@-@VERSION@.@TARBALL_POSTFIX@

# download archive from lifemapper git
download_git () {
      echo "Starting GIT checkout from $URL"
      wget "$DL_URL/$DL_PKG" 
      tar xzvf $DL_PKG
      
      if [ -d $TOPDIR ]; then
          echo "Removing .git in $TOPDIR:"
          DIRS=`find $TOPDIR -name .git`
          for i in $DIRS; do
              rm -rf $i
          done

      else
          echo "Error with GIT archive download from $URL/$SRC: directory $TOPDIR is not created"
      fi
}


# create distro files for lmcompute
create_distro () {
	if [ -d $TOPDIR ]; then
		mv $TOPDIR $NEW_TOPDIR
		# create lmtrex src distro
		echo "Creating lmsyft archive from Github archive download"
		tar czf $NEW_PKG $NEW_TOPDIR
	else
		echo "GIT downloaded directory $TOPDIR is not present"
	fi
}

### main ###
download_git
create_distro
